<div class="container">
  <div class="row">
    <div class="col-xs-6 col-xs-offset-3">
      <%= cl_image_tag @cocktail.photo, height: 300, width: 400, crop: :fill %>
      <h1><%= @cocktail.name %></h1>
      <ul class="list-unstyled">
        <% @cocktail.doses.each do |dose| %>
          <li>
            <%= dose.ingredient.name %> <%= dose.description %>
            <%= link_to "Delete a dose", dose_path(dose),
              method: :delete,
              data: { confirm: "Are you sure?" } %>
          </li>
        <% end %>
        <li><%= link_to 'Add a dose', new_cocktail_dose_path(@cocktail)  %></li>
        <li><%= link_to 'Back to list', cocktails_path  %></li>
      </ul>
    </div>
  </div>
</div>
